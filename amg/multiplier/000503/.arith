#############################################################################
#
#               ARITHの設定ファイル（.arith）のサンプル
#       .arith はARITH処理系を実行するディレクトリに置きましょう．
#
#############################################################################
#  入力ARITHソースコード
[ARITHSRC] cgout.ari

#  ARITH処理系に対するスイッチ
[SYSOPT] noxml 

#  出力XMLファイル
#[XML] arith.xml

#  使用する数式処理システム
#[MATH] Maxima
[MATH] Mathematica
#  機能検証で用いる作業用ディレクトリ
[WORKDIR] tmp_arith

#  出力HDLフォーマット
#[HDL] Verilog
#[HDL] VHDL
[HDL] BothOfVerilogAndVHDL
#  出力HDLファイル名
[HDLOUT] arithout
#  コンフィグレーションファイル名
[CONF] confFile

#  ARITH処理系の出力するメッセージを記録するファイル
[MSGFILE] arith.log
